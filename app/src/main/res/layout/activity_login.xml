<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oneUIColor"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loginBlank1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textAlignment="textStart"
            android:textColor="@color/colorDisplayFont"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/Loginboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="@string/loginalert"
            android:textAlignment="center"
            android:textColor="@color/colorDisplayFont"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/loginBlank11"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="textStart"
            android:textColor="@color/colorDisplayFont"
            android:textSize="30sp" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner"
            android:textColor="@color/colorCriterionFont">

        </TabWidget>

        <TextView
            android:id="@+id/loginBlank2"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/tab01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/phoneEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/phoneNum"
                        android:background="@drawable/shape_corner"
                        android:inputType="phone"
                        android:padding="20dp"
                        android:selectAllOnFocus="true"
                        android:singleLine="true" />
                </LinearLayout>

                <TextView
                    android:id="@+id/loginBlank3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/passwEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/passW"
                        android:background="@drawable/shape_corner"
                        android:inputType="textWebPassword"
                        android:padding="20dp"
                        android:selectAllOnFocus="true"
                        android:singleLine="true" />

                </LinearLayout>

                <TextView
                    android:id="@+id/loginBlank4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_corner_blue"
                    android:text="@string/login"
                    android:textColor="@color/colorCriterionFont"
                    android:textSize="18sp"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/phoneEdit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/phoneNum"
                        android:inputType="phone"
                        android:background="@drawable/shape_corner"
                        android:padding="20dp"
                        android:selectAllOnFocus="true"
                        android:singleLine="false" />
                </LinearLayout>

                <TextView
                    android:id="@+id/loginBlank23"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/sendCodeEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/sendCode"
                        android:inputType="number"
                        android:background="@drawable/shape_corner"
                        android:padding="20dp"
                        android:selectAllOnFocus="true"
                        android:singleLine="true" />

                    <Button
                        android:id="@+id/sendCodeGet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_corner_blue"
                        android:text="@string/getSendCode"
                        android:textColor="@color/colorCriterionFont"
                        android:textSize="18sp"
                        style="?android:attr/borderlessButtonStyle"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/loginBlank24"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <Button
                    android:id="@+id/loginButton2"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_corner_blue"
                    android:text="@string/login"
                    android:textColor="@color/colorCriterionFont"
                    android:textSize="18sp"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/SignBn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_corner"
                    android:text="@string/getSignUp" />

                <Button
                    android:id="@+id/findPwbn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner"
                    android:text="忘记密码?" />
            </LinearLayout>

            <Button
                android:id="@+id/CameraBn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_corner"
                android:text="车辆识别" />
        </LinearLayout>
    </LinearLayout>


</TabHost>